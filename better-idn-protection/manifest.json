{
  "manifest_version": 3,
  "name": "Better URL Protection",
  "version": "2.0",
  "description": "This extension provides better protection against IDN based attacks.",
  "icons": {
    "128": "icon128.png",
    "32": "icon32.png",
    "48": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
